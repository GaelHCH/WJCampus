<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/subjectIcon"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        >
    </ImageView>

    <TextView
        android:id="@+id/roomNumberTxt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@id/subjectIcon"
        android:text="Room Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="50dp">

    </TextView>

    <TextView
        android:id="@+id/floorTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@id/subjectIcon"
        android:layout_below="@+id/roomNumberTxt"
        android:text="Floor"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/goToRoomBtn"
        android:layout_toRightOf="@id/floorTxt"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:text="Go" >

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/layoutHelper"
        android:text="Helper"
        android:layout_marginTop="150dp" >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/layoutHelper"
        >
    </LinearLayout>

</RelativeLayout>